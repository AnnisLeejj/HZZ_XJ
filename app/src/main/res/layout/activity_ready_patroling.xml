<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heking.hzz.UI.Activity.ReadyPatroling">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/container_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rotia_10_ddd"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:padding="5dp">

        <AutoCompleteTextView
            android:id="@+id/cotnent_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/rotia_10_ddd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/text_delete" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_filtrate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/container_search"
        android:layout_alignParentRight="true"
        android:background="@drawable/rotia_10_ddd"
        android:text="筛选" />

    <ImageButton
        android:id="@+id/test_1"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_above="@+id/move_to_mylocaltion"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rotia_10_ddd"
        android:padding="5dp"
        android:src="@drawable/marker_green" />

    <ImageButton
        android:id="@+id/move_to_mylocaltion"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rotia_10_ddd"
        android:padding="5dp"
        android:src="@mipmap/move_to_mylocation" />
</RelativeLayout>
